generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model car {
  car_id            Int
  title             String    @db.Char(500)
  title_ru          String?   @db.Char(500)
  price             Int
  images            String[]
  external_url      String?
  color             String?   @db.Char(500)
  color_ru          String?   @db.Char(500)
  distance          Int
  production_year   Int
  fuel_type         String    @db.Char(500)
  fuel_type_ru      String?   @db.Char(500)
  v_type            String    @db.Char(500)
  v_type_ru         String?   @db.Char(500)
  registration_date DateTime? @db.Timestamp(6)
  last_update       DateTime? @default(now()) @db.Timestamp(6)
  sold              Boolean   @default(false)
  id                BigInt    @id @default(autoincrement())

}

enum attribute_type {
  BRAND
  MODEL
  SUBMODEL
  SERIES_NAME
  DETAILED_GRADE
  ATTRIBUTE
  COUNTRY
}
